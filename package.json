{
  "name": "guitar-combat",
  "version": "1.0.0",
  "description": "Конструктор боя для гитары",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf node_modules dist build .cache",
    "rebuild": "npm run clean && npm install && npm run build",
    "build:css": "npx tailwindcss -i ./css/input.css -o ./css/styles.css",
    "watch:css": "npx tailwindcss -i ./css/input.css -o ./css/styles.css --watch",
    "dev": "npm run watch:css",
    "build": "npm run generate-manifest && webpack --mode=production",
    "generate-manifest": "node scripts/generate-manifest.js",
    "start": "webpack serve --mode=development",
    "docs": "jsdoc js/ -d docs"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "babel-loader": "^10.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "html-webpack-plugin": "^5.6.4",
    "jsdoc": "^4.0.4",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.0",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {}
}
